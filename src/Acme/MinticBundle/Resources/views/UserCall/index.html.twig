{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserCall list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Call_id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Url_image</th>
                <th>Institution</th>
                <th>Academic_program</th>
                <th>Cc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usercall_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.callid }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.urlimage }}</td>
                <td>{{ entity.institution }}</td>
                <td>{{ entity.academicprogram }}</td>
                <td>{{ entity.cc }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('usercall_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('usercall_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usercall_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
