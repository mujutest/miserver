{% extends '::base.html.twig' %}

{% block body -%}
    <h1>News</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Callid</th>
                <td>{{ entity.callId }}</td>
            </tr>
            <tr>
                <th>News</th>
                <td>
                    {% for key, value in entity.news %} 
                        <p>{{ value }}.</p>
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('news') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('news_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
