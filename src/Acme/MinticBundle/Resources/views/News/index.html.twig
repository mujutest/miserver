{% extends '::base.html.twig' %}

{% block body -%}
    <h1>News list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Callid</th>
                <th>News</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('news_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.callId }}</td>
                    <td>
                        {% for key, value in entity.news %} 
                            <p>{{ value }}.</p>
                        {% endfor %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('news_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('news_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('news_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
